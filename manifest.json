{
    "name": "Dev Toolguide",
    "author": "Derviş Öksüzoğlu",
    "version": "1.0.0",
    "manifest_version": 3,
    "incognito": "not_allowed",
    "description": "Your toolbox companion to accomplish many handy stuff, without leaving the browser.",
    "background": {
        "service_worker": "/src/background/service_worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "/assets/css/custom.css"
            ],
            "js": [
                "/src/app.js"
            ]
        }
    ],
    "permissions": [],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Dev Toolguide",
        "default_icon": {
            "16": "images/logo/icon_16x16.png",
            "48": "images/logo/icon_48x48.png"
        }
    },
    "default_locale": "en",
    "web_accessible_resources": [
        {
            "resources": [
                "/images/logo/final-icon-without-text-minified.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}